{
    "manifest_version": 2,
    "name": "Leo Extension",
    "version": "0.2",
    "description": "Leo Tools",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_title": "Leo Extension",
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://zip5.5432.tw/; object-src 'self'",
    "permissions": [
        "contextMenus",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": [
            "jquery.js",
            "utilities.js",
            "background.js"
        ]
    }
}